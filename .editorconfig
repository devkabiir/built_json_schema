# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.
# checkout https://editorconfig.org

root = true

[*]

# We recommend you to keep these unchanged.
charset = utf-8
end_of_line = lf # For consistent file endings on all platforms
insert_final_newline = true # Some cli tools like git expect a final newline
indent_style = space
indent_size = 2
trim_trailing_whitespace = true


[*.md]
trim_trailing_whitespace = false
